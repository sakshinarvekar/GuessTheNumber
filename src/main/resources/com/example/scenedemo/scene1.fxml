<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="styles.css" ?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox fx:id="sc1" alignment="CENTER" prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scenedemo.Scene1Controller"
      style="-fx-background-color: linear-gradient(to right top, #18005A, #1F0042, #350057);" >
    <Label fx:id="greetingLabel" text="Welcome to Guess the Number!!">
        <font>
            <Font name="Arial Unicode MS" size="25.0" />
        </font>
        <VBox.margin>
            <Insets bottom="20.0" left="50.0" right="30.0" top="20.0" />
        </VBox.margin></Label>
    <TextField fx:id="nameField" promptText="Enter your name...">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <VBox.margin>
         <Insets bottom="60.0" left="50.0" right="50.0" top="20.0" />
      </VBox.margin>
      <font>
         <Font name="Arial Unicode MS" size="20.0" />
      </font></TextField>
        <Button fx:id="sc1btn" layoutX="200.0" layoutY="250.0" onAction="#goToScene2" text="Go!!" >
      <font>
         <Font name="Arial Rounded MT Bold" size="18.0" />
      </font></Button>

</VBox>
