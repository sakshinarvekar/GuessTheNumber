<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet type="text/css" href="styles.css" ?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="sc2" alignment="CENTER" prefHeight="400.0" prefWidth="520.0" style="-fx-background-color: linear-gradient(to right top, #18005A, #1F0042, #350057);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scenedemo.Scene2Controller">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>


    <Label fx:id="greetingLabel2" textAlignment="CENTER">
         <font>
            <Font size="25.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="50.0" right="30.0" top="20.0" />
         </VBox.margin>
    </Label>
    <Label fx:id="rules" textAlignment="JUSTIFY">
        <font>
            <Font size="20.0" />
        </font>
         <VBox.margin>
            <Insets bottom="20.0" left="50.0" right="30.0" top="10.0" />
         </VBox.margin></Label>

   <Button fx:id="sc2btn" layoutX="200.0" layoutY="300.0" mnemonicParsing="false" onAction="#startGame" text="Start" textAlignment="CENTER">
       <font>
           <Font name="Arial Rounded MT Bold" size="18.0" />
       </font>
   </Button>
</VBox>
